programa
{
	
	funcao inicio()
	{	real salario,aumento,novosalario
		
		escreva("Digite o salário do funcionario :")
		leia(salario)
		aumento = 0.15
		novosalario = salario +(salario*aumento)
		escreva("o novo salário do funcionario é de",novosalario)
	}
}
