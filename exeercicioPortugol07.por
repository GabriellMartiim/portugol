	funcao inicio()
	{	real	altura,pesoideal
	
		escreva("Informe sua altura em metros :")
		leia(altura)
		pesoideal = (72.7 * altura-58 ) 
		escreva("Seu peso ideal é de ", pesoideal,"kg")
	}
}
