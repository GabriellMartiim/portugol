programa
{
	
	funcao inicio()
	{	
		real milhas,conversor,quilometros
	
		escreva("Digite a distância em milhas : ")
		leia(milhas)
		conversor = 0.6214
		quilometros = milhas*conversor
		escreva("A distância de ", milhas, " milhas é equivalente a ", quilometros, " quilômetros.")
		
		
		
	}
}
